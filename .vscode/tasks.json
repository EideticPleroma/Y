{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "group": "build"
        },
        {
            "label": "Run FastAPI",
            "type": "shell",
            "command": "uvicorn app.main:app --reload",
            "group": "build"
        },
        {
            "label": "Run Streamlit",
            "type": "shell",
            "command": "streamlit run streamlit_app.py",
            "group": "build"
        }
    ]
}