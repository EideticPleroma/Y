  // Syntax Highlighting - Radiant White Emphasis
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      // Comments - Medium Gray (Contemplation)
      {
        "scope": "comment",
        "settings": {
          "foreground": "#555555",
          "fontStyle": "italic"
        }
      },
      // Keywords - Pure White (Highest Importance)
      {
        "scope": [
          "keyword",
          "storage.type",
          "storage.modifier"
        ],
        "settings": {
          "foreground": "#ffffff",
          "fontStyle": "bold"
        }
      },
      // Functions - Off-white (Active Transformation)
      {
        "scope": [
          "entity.name.function",
          "support.function"
        ],
        "settings": {
          "foreground": "#f5f5f5"
        }
      },
      // Strings - Light Gray (Sacred Data)
      {
        "scope": "string",
        "settings": {
          "foreground": "#dddddd"
        }
      },
      // Numbers - Light Gray
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#cccccc"
        }
      },
      // Types/Classes - Pure White
      {
        "scope": [
          "entity.name.type",
          "entity.name.class",
          "support.type",
          "support.class"
        ],
        "settings": {
          "foreground": "#ffffff"
        }
      },
      // Variables - Default (Flow State)
      {
        "scope": "variable",
        "settings": {
          "foreground": "#e8e8e8"
        }
      },
      // Operators - Medium Gray
      {
        "scope": "keyword.operator",
        "settings": {
          "foreground": "#aaaaaa"
        }
      },
      // Punctuation - Light Gray
      {
        "scope": "punctuation",
        "settings": {
          "foreground": "#999999"
        }
      },
      // Constants - White
      {
        "scope": "constant",
        "settings": {
          "foreground": "#ffffff"
        }
      },
      // Attributes/Properties
      {
        "scope": [
          "entity.other.attribute-name",
          "variable.other.property"
        ],
        "settings": {
          "foreground": "#eeeeee"
        }
      },
      // Markdown Headers - Pure White
      {
        "scope": "markup.heading",
        "settings": {
          "foreground": "#ffffff",
          "fontStyle": "bold"
        }
      },
      // Markdown Bold - White
      {
        "scope": "markup.bold",
        "settings": {
          "foreground": "#ffffff",
          "fontStyle": "bold"
        }
      },
      // Markdown Italic - Light Gray
      {
        "scope": "markup.italic",
        "settings": {
          "foreground": "#dddddd",
          "fontStyle": "italic"
        }
      },
      // Links - White
      {
        "scope": "markup.underline.link",
        "settings": {
          "foreground": "#ffffff"
        }
      }
    ]
  },
  
  // Bracket Pair Colorization - Monochrome Shades
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#ffffff",
    "editorBracketHighlight.foreground2": "#cccccc",
    "editorBracketHighlight.foreground3": "#999999",
    "editorBracketHighlight.foreground4": "#ffffff",
    "editorBracketHighlight.foreground5": "#cccccc",
    "editorBracketHighlight.foreground6": "#999999"
  },
  
  // Font Settings - Clean & Readable
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'Consolas', 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 22,
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  
  // Editor Behavior - Sacred Coding Experience
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "all",
  "editor.occurrencesHighlight": true,
  "editor.selectionHighlight": true,
  "editor.wordWrap": "off",
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  
  // Workspace Aesthetics
  "window.zoomLevel": 0,
  "window.title": "${dirty}${activeEditorShort}${separator}You - Sacred Technology",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  
  // Terminal Settings
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Cascadia Code', 'Consolas', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.smoothScrolling": true,
  
  // Git Integration
  "git.decorations.enabled": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  
  // File Associations
  "files.associations": {
    "*.md": "markdown",
    "*.json": "jsonc"
  },
  
  // Auto Save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  // Zen Mode - Pure Contemplation
  "zenMode.centerLayout": true,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.restore": true,
  
  // Sacred Technology Reminder
  "workbench.colorCustomizations": {
    "statusBar.foreground": "#ffffff",
    "statusBar.background": "#000000"
  }
}

