{
  // ========================================
  // VOID & RADIANCE THEME
  // Sacred Technology for Consciousness Evolution
  // ========================================
  
  // Editor - Pure Black Void
  "workbench.colorTheme": "Default Dark Modern",
  "editor.background": "#000000",
  "editor.foreground": "#ffffff",
  "editor.lineHighlightBackground": "#0a0a0a",
  "editor.selectionBackground": "#2a2a2a",
  "editor.inactiveSelectionBackground": "#1a1a1a",
  "editor.findMatchBackground": "#3a3a3a",
  "editor.findMatchHighlightBackground": "#2a2a2a",
  "editor.wordHighlightBackground": "#1a1a1a",
  "editor.wordHighlightStrongBackground": "#2a2a2a",
  
  // Workbench - Subtle Gradation from Void
  "workbench.colorCustomizations": {
    // Base Colors
    "focusBorder": "#ffffff",
    "foreground": "#ffffff",
    "widget.shadow": "#000000",
    
